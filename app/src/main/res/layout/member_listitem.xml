<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/ProfilePhotoImage"
        android:layout_margin="6dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="Jane Doe"
            android:textSize="20dp"
            android:id="@+id/ProfileFirstNameTextBlock"
            android:layout_marginTop="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jane Doe"
            android:textSize="14dp"
            android:layout_gravity="bottom"
            android:layout_below="@+id/ProfileFirstNameTextBlock"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp"
            android:id="@+id/ProfileRoleTextBlock" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/ProfileUserPresenseImageView"
            android:background="#5cff4f"
            android:layout_toEndOf="@+id/ProfileFirstNameTextBlock"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/EmailIconImageView"
            android:layout_alignTop="@+id/ProfileUserPresenseImageView"
            android:layout_alignParentEnd="true"
            android:src="@drawable/userprofile_email_icon_black_128px"
            android:alpha=".15"
            android:layout_marginRight="8dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/SkypeIconImageView"
            android:layout_alignTop="@+id/ProfileUserPresenseImageView"
            android:layout_toStartOf="@+id/EmailIconImageView"
            android:src="@drawable/userprofile_skype_icon_black_128px"
            android:adjustViewBounds="false"
            android:alpha=".15"
            android:layout_marginRight="8dp"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/CallIconImageView"
            android:layout_alignTop="@+id/SkypeIconImageView"
            android:layout_toStartOf="@+id/SkypeIconImageView"
            android:src="@drawable/userprofile_phone_icon_black_128px"
            android:alpha=".15"
            android:layout_marginRight="8dp"
            android:visibility="invisible" />


    </RelativeLayout>

</LinearLayout>